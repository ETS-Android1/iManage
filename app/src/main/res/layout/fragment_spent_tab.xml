<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    tools:context=".SpentTab">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expenseCV"
        app:cardCornerRadius="16dp"
        >
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="16dp">

             <TextView
                 android:id="@+id/expenseIdLabel"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="4dp"
                 android:text="No"

                 android:textStyle="bold" />
             <TextView
                 android:text=""
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/expenseId"
                 android:layout_toRightOf="@id/expenseIdLabel"
                 />

             <TextView
                 android:id="@+id/expenseCategoryLabel"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/expenseId"
                 android:layout_marginRight="4dp"
                 android:text="@string/category"
                 android:textStyle="bold" />
             <TextView
                 android:text=""
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/expenseCategory"
                 android:layout_toRightOf="@id/expenseCategoryLabel"
                 android:layout_below="@+id/expenseId"
                 />

             <TextView
                 android:id="@+id/expenseDescriptionLabel"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/expenseCategory"
                 android:layout_marginRight="4dp"
                 android:text="@string/description"
                 android:textStyle="bold" />
             <TextView
                 android:text=""
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/expenseDescription"
                 android:layout_toRightOf="@id/expenseDescriptionLabel"
                 android:layout_below="@+id/expenseCategory"
                 />

             <TextView
                 android:id="@+id/expenseAmountLabel"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/expenseDescription"
                 android:layout_marginRight="4dp"
                 android:text="@string/amount"
                 android:textStyle="bold" />
             <TextView
                 android:text=""
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/expenseAmount"
                 android:layout_toRightOf="@id/expenseDescriptionLabel"
                 android:layout_below="@+id/expenseDescription"
                 />

             <TextView
                 android:id="@+id/expenseDateLabel"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/expenseAmount"
                 android:layout_marginRight="4dp"
                 android:text="@string/dueDate"
                 android:textStyle="bold" />
             <TextView
                 android:text=""
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/expenseDate"
                 android:layout_toRightOf="@id/expenseDateLabel"
                 android:layout_below="@+id/expenseAmount"
                 />


         </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>