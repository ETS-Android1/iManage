<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="40dp"
    android:layout_centerHorizontal="true"
    tools:Context=".ExpenseFragment">
    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/takenMoney"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="10000 $" />
    <Spinner
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/takenMoney"
        android:id="@+id/expenseReason">
    </Spinner>
    <EditText
        android:hint="Description (Optional)"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_below="@id/expenseReason"/>

    <Button
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_below="@+id/description"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Create Expense"
        android:id="@+id/storeExpense"

        />

</RelativeLayout>