<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    style="@style/form"
    tools:context=".DebitActivity">

    <EditText
        android:id="@+id/debitedAmount"
        style="@style/EditTextStyle"
        android:inputType="number"
        android:hint="10000$"
        android:background="@drawable/rounded_edit_text"

        />
    <EditText
        android:id="@+id/debtor"
        style="@style/EditTextStyle"
        android:inputType="textPersonName"
        android:hint="John Doe"
        android:layout_below="@+id/debitedAmount"
        android:background="@drawable/rounded_edit_text"

        />
    <EditText
        android:id="@+id/debtorPhone"
        style="@style/EditTextStyle"
        android:inputType="phone"
        android:hint="078300000000"
        android:layout_below="@+id/debtor"
        android:background="@drawable/rounded_edit_text"
        />

    <EditText
        style="@style/EditTextStyle"
        android:hint="date"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/timeToReturn"
        android:background="@drawable/rounded_edit_text"
        android:layout_below="@id/debtorPhone"
        android:drawableRight="@drawable/ic_date"
        />

    <Button
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:id="@+id/saveDebit"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:text="Save Debit"
        android:layout_below="@+id/timeToReturn"/>

</RelativeLayout>