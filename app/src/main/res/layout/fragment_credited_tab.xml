<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreditedTab">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/creditedCV"
        android:layout_margin="13dp"
        app:cardCornerRadius="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >
            <TextView
                android:text="ID:"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditIdLabel"
                />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/creditId"
                android:layout_toRightOf="@+id/creditIdLabel"
                />
            <TextView
                android:text="credit Names:"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditNameLabel"
                android:layout_below="@+id/creditId"
                />
            <TextView
                android:text=""
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditorName"
                android:layout_below="@+id/creditId"
                android:layout_toRightOf="@+id/creditNameLabel"
                />

            <TextView
                android:text="@string/phone"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditorPhoneLabel"
                android:layout_below="@+id/creditorName"
             />
            <TextView
                android:text=""
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditorPhone"
                android:layout_below="@+id/creditorName"
                android:layout_toRightOf="@+id/creditNameLabel"

                />
            <TextView
                android:text="@string/amount"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditAmountLabel"
                android:layout_below="@+id/creditorPhone"
                />
            <TextView
                android:text=""
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditAmount"
                android:layout_below="@+id/creditorPhone"
                android:layout_toRightOf="@+id/creditAmountLabel"

                />
            <TextView
                android:text="@string/dueDate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditDueDateLabel"
                android:layout_below="@+id/creditAmount"
                />
            <TextView
                android:text=""
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditDueDate"
                android:layout_below="@+id/creditAmount"
                android:layout_toRightOf="@+id/creditAmountLabel"
                />

            <TextView
                android:text="@string/timeToPay"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/CreditPaymentDate"
                android:layout_below="@+id/creditDueDate"
                />
            <TextView
                android:text=""
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/creditPaymentDate"
                android:layout_below="@+id/creditDueDate"
                android:layout_toRightOf="@+id/CreditPaymentDate"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/cpp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:id="@+id/creditedPaymentTitle"
                android:layout_below="@id/creditPaymentDate"
                />


            <TextView
                android:textSize="16dp"
                android:layout_marginTop="32dp"
                android:text=" "
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:id="@+id/payedAmount"
                android:layout_below="@+id/creditedPaymentTitle"
                />

            <TextView
                android:textSize="16dp"
                android:layout_marginTop="32dp"
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/remainingDays"
                android:layout_below="@+id/creditedPaymentTitle"
                android:layout_toRightOf="@id/payedAmount"
                />

            <EditText
                android:id="@+id/payCreditAmount"
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:layout_below="@+id/remainingDays"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/rounded_edit_text"

                android:textSize="16dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/payCreditBtn"
                android:text="Pay"
                android:layout_below="@+id/remainingDays"
                android:layout_toRightOf="@+id/payCreditAmount"
                android:background="@drawable/rounded_button"
                />





        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>