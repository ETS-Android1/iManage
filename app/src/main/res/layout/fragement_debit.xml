<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    tools:context=".DebitFragment">

    <EditText
        android:id="@+id/debitedAmount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:inputType="number"
        android:hint="10000$"
        android:background="@drawable/rounded_edit_text"

        />
    <EditText
        android:id="@+id/debtor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:inputType="textPersonName"
        android:hint="John Doe"
        android:layout_below="@+id/debitedAmount"
        android:background="@drawable/rounded_edit_text"

        />
    <EditText
        android:id="@+id/debtorPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:inputType="phone"
        android:hint="078300000000"
        android:layout_below="@+id/debtor"
        android:background="@drawable/rounded_edit_text"
        />

        <EditText
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:hint="date"
            android:inputType="datetime"
            android:clickable="false"
            android:id="@+id/timeToReturn"
            android:background="@drawable/rounded_edit_text"
            android:layout_below="@id/debtorPhone"
            />

    <ImageView
        android:id="@+id/CalenderIcon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/debtorPhone"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/timeToReturn"
        app:srcCompat="@drawable/ic_date" />

    <Button
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:id="@+id/saveDebit"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:text="Save Debit"
        android:layout_below="@+id/CalenderIcon"/>

</RelativeLayout>